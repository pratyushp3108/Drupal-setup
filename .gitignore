# =======================================
# Drupal 10 Composer Project Git Ignore
# =======================================

# Ignore Composer dependencies
/vendor/
composer.lock

# Ignore Drupal core
/web/core/
web/sites/*/settings*.php
web/sites/default/settings.php

# Ignore contrib modules/themes
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/

# Ignore site files (uploads)
web/sites/*/files/
!web/sites/default/files/.gitkeep

# Ignore settings.php but allow default one
web/sites/*/settings*.php
web/sites/default/settings.php

# Ignore services.yml
web/sites/*/services*.yml

# Ignore local development settings
web/sites/*/development.services.yml
web/sites/*/local.services.yml
web/sites/*/settings.local.php

# Ignore sync directory if outside web root (change if yours differs)
config/
.sync/
private/
.env
.env.local
.envrc

# Ignore Drush backup and site aliases
/drush/backups/
/drush/sites/

# Ignore build tool dependencies (npm, yarn, sass, etc.)
**/node_modules/
**/bower_components/
**/package-lock.json
**/yarn.lock
**/gulpfile.js
**/webpack.config.js

# IDE and system files
*.sublime-project
*.sublime-workspace
*.swp
*.swo
*.bak
*.tmp
*.log
*.DS_Store
Thumbs.db
.idea/
.vscode/
nbproject/

# PHPUnit & testing
/phpunit.xml
/phpunit.xml.dist
/sites/simpletest
/htmlcov/
coverage.xml

# Ignore misc
*.orig
*.lock
*.sql
*.sqlite
*.tar
*.gz
*.zip
*.tgz
*.patch

# Ignore by default custom theme/node_modules
/web/themes/custom/**/node_modules/
/web/modules/custom/**/node_modules/
